<?xml version="1.0"?>

<launch>


    <node pkg="fruit_samurai" type="fruit_samurai_node" name="fruit_samurai" output="screen">
        <param name="cluster_tolerance" value="0.005"/>
        <param name="cluster_min_size" value="1000"/>
        <param name="cluster_max_size" value="10000"/>
        <param name="input_topic" value="/pacman_vision/processed_scene"/>
        <param name="reference_frame" value="/camera_rgb_optical_frame"/>
    </node>
    <node pkg="tf" type="static_transform_publisher" name="calibration_transform" args="0.1 -0.03 1.1 1 0 0 0 /camera_rgb_optical_frame /base_frame 200" output="screen"/>

</launch>
